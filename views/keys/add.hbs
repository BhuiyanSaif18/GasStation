<h3>{{viewTitle}}</h3>

<form action="/verify" method="GET" autocomplete="off">
    <div class="form-group">
        <label>Public Key</label>
        <input type="text" class="form-control" name="publicKey" placeholder="Public Key" value="{{publicKey}}">
       
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/verify/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>